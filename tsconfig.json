{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "filesGlob": [
    "client/**/*.ts",
    "server/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "client/app.ts",
    "client/imports/edit-party/edit-party.ts",
    "client/imports/parties-form/parties-form.ts",
    "client/imports/party/party.ts",
    "server/load-parties.ts",
    "server/main.ts",
    "typings/browser.d.ts",
    "typings/browser/ambient/es6-shim/index.d.ts",
    "typings/browser/ambient/meteor/index.d.ts",
    "typings/browser/definitions/es6-promise/index.d.ts",
    "typings/main.d.ts",
    "typings/main/ambient/es6-shim/index.d.ts",
    "typings/main/ambient/meteor/index.d.ts",
    "typings/main/definitions/es6-promise/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
